mixin khung-table(title)
	div(class=`rounded-[7px] px-[30px] h-max bg-adminColorMain text-adminColorHeadline select-none`)
		div(class="flex items-center justify-between border-b-[0.1px] border-b-[black]/5 hover:cursor-pointer transition-all duration-1000" show-box = "")
			div(class=`text-[14px] font-bold py-[10px] capitalize  text-main`) #{title}
			if(block)
				i(class="fa-solid fa-angle-down transition-all duration-1000 text-main") 
		div(class=`animate__animated transition duration-500 truncate ${block ? 'pb-[20px]' : ''}` content-box) 
			if(block)
				block
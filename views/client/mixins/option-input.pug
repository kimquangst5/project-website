mixin option-input(title, nameId, bat_buoc, icon, placeholder, type = "text", value)
	div(class=`flex flex-row items-center gap-y-[10px] grid grid-cols-4`)
		div(class="flex gap-[10px] items-center") 
			i(class=icon)
			label(
				for=nameId
				class=`text-[14px]`
			) #{title}
				- if(bat_buoc.toLowerCase() == "yes")
					span(class="text-[red]")  *
		- if(bat_buoc.toLowerCase() == "yes")
			input(
				type=type, name=nameId id=nameId
				class=`p-[5px] rounded-[5px] border-[1px] text-[12px] bg-transparent border-text outline-none col-span-2`
				placeholder=placeholder
				value = value
				required="true"
			)
		- else
			input(
				type=type, name=nameId id=nameId
				class=`p-[5px] rounded-[5px] border-[1px] text-[12px] bg-transparent border-text outline-none col-span-2`
				placeholder=placeholder
				value = value
			)
extends ../../layouts/default.pug
include ../../mixins/dieu-huong.pug
include ../../mixins/box-message.pug

block main
	+dieu-huong("Danh sách phòng chat")
	div(class=`p-[10px]`)
		div(class=`container`)
			div(class=``)
				a(href="/roomchat/create" class=`bg-chu text-[white] font-bold px-[20px] py-[5px] text-[13px] rounded-[7px]`) Tạo phòng chat

			div(class=`pt-[20px]`)
				div(class=`font-bold text-[#333333] text-[20px]`) Danh sách phòng chat
				div(class=`grid grid-cols-3 gap-[10px]`) 
					each it in listRoom
						div(class=`flex items-center gap-[15px] border-[#ddd] border-[1px] rounded-[8px] p-[10px]`) 
							div(class=`h-[50px]`)
								img(src=it.avatar, alt=it.title class=`aspect-square h-full`)
							div(class=`h-max`) 
								div(class=`font-bold text-[#333333] text-[14px]`) #{it.title}
								a(href=`/chat/${it.id}` class=`w-max text-[12px] px-[10px] py-[4px] bg-chu text-[white] font-bold rounded-[6px]`) Nhắn tin
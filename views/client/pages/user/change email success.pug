extends ../../layouts/default.pug
include ../../mixins/dieu-huong.pug

block main
	+dieu-huong("Thay đổi email")
	div(class="container mt-[50px]") 
		div(class="flex justify-center items-center")
			form(action="/member/change-email-success" method="POST" class="bg-[white] p-[30px] rounded-[5px] w-1/2 flex flex-col gap-[15px]")
					div(class="flex flex-col gap-y-[10px]") 
						label(for="emailOld" class=`text-chu`) Email cũ
							span(class=`text-[red] text-[18px]`)  *
						div(class="border-[1px] border-[black]/30 rounded-[5px] flex gap-[10px] items-center px-[5px] py-[10px]")
							i(class="fa-regular fa-user text-[black]/80 icon px-[10px]")
							input(type="email", id="emailOld" name="emailOld" class=`outline-none w-full` placeholder="Ví dụ: kimquangst5@gmail.com" readonly value=email)
					div(class="flex flex-col gap-y-[10px]") 
						label(for="email" class=`text-chu`) Email mới
							span(class=`text-[red] text-[18px]`)  *
						div(class="border-[1px] border-[black]/30 rounded-[5px] flex gap-[10px] items-center px-[5px] py-[10px]")
							i(class="fa-regular fa-unlock text-[black]/80 icon px-[10px]")
							input(type="email", id="email" name="email" 	class=`outline-none w-full` placeholder="Nhập email mới")
					
					button(type="submit" class="bg-chu text-[white] p-[15px] text-center rounded-[6px]") Cập nhật